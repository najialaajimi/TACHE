{% extends 'layout.twig' %}
{% block content %}
  <h2>Liste des Utilisateurs</h2>
 <a href="/signup" class="btn btn-primary mb-3">Create New User</a>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom d'utilisateur</th>
        <th>Email</th>
